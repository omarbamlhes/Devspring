{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 * - breadcrumb_divider: Breadcrumb divider character
 * - attributes: HTML attributes. The attributes object.
 *
 *  @see devspring_preprocess_breadcrumb()
 *
 */
#}

{% if breadcrumb and breadcrumb|length > 0 %}
<nav aria-label="breadcrumb" class="mt-3">
    <ol class="breadcrumb justify-content-center mb-0">
        {% for item in breadcrumb %}
            {% if not loop.last %}
                <li class="breadcrumb-item">
                    <a class="{{ textColor|default('text-white') }}" href="{{ item.url }}">{{ item.text }}</a>
                </li>
            {% else %}
                <li class="breadcrumb-item {{ textColor|default('text-white') }} active" aria-current="page">
                    {{ item.text }}
                </li>
            {% endif %}
        {% endfor %}
    </ol>
</nav>
{% endif %}